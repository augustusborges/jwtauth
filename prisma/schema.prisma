generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  first_name  String
  last_name   String   
  email       String  @unique
  password    String
  token       String? 
}

model usuario {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  sobrenome   String   
  email       String  @unique
  senha    String
  token       String? 
}

model papel {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  descricao   String?   

}

model permissao {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  descricao   String?   
}

model perfil {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  descricao   String?   
}