generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  first_name  String
  last_name   String   
  email       String  @unique
  password    String
  token       String? 
}

model Usuario {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  sobrenome   String   
  email       String  @unique
  senha    String
  token       String? 
  papel Papel @relation(fields: [papelId], references: [id])
  papelId String @db.ObjectId 
}

model Papel {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  descricao   String? 
  usuario Usuario[]

}

model Permissao {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  descricao   String?   
}

model Perfil {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  descricao   String?   
}

